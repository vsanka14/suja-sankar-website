---
import MainLayout from "../layouts/main-layout.astro";
import VideoThumbnail from "../components/video-thumbnail.astro";
import Card from "../components/card.astro";

// Example video data (you can replace this with real data later)
const videos = [
  {
    title: "Introduction to Chemical Bonds",
    description: "Learn about ionic and covalent bonds",
    thumbnail: "🔬",
    duration: "10:30",
  },
  {
    title: "Balancing Chemical Equations",
    description: "Master the art of equation balancing",
    thumbnail: "⚖️",
    duration: "15:45",
  },
  {
    title: "Understanding pH Levels",
    description: "Explore acids, bases, and the pH scale",
    thumbnail: "🧪",
    duration: "12:20",
  },
];
---

<MainLayout title="My Videos">
  <Card
    title="Chemistry Videos"
    emoji="🎬"
    description="Watch and learn from my collection of chemistry tutorials and demonstrations."
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        videos.map((video) => (
          <VideoThumbnail
            title={video.title}
            description={video.description}
            thumbnail={video.thumbnail}
            duration={video.duration}
          />
        ))
      }
    </div>
  </Card>
</MainLayout>
