---
interface Props {
  thumbnail: string;
  title: string;
  description: string;
  duration: string;
}

const { thumbnail, title, description, duration } = Astro.props;
---

<div
  class="bg-gray-50 dark:bg-gray-700/50 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow"
>
  <div
    class="aspect-video bg-gray-200 dark:bg-gray-600 flex items-center justify-center"
  >
    <span class="text-4xl">{thumbnail}</span>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
      {description}
    </p>
    <div class="flex items-center justify-between text-sm">
      <span class="text-gray-500 dark:text-gray-400">
        Duration: {duration}
      </span>
      <button
        class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
      >
        Watch Now â†’
      </button>
    </div>
  </div>
</div>
