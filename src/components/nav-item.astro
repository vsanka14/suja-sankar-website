---
interface Props {
  href: string;
  text: string;
  isMobile?: boolean;
}

const { href, text, isMobile = false } = Astro.props;
---

<style>
  @keyframes bubble-up {
    0%,
    100% {
      opacity: 0;
      transform: translateY(10px);
    }
    50% {
      opacity: 1;
      transform: translateY(-2px);
    }
  }

  .desktop-nav-item {
    position: relative;
    transition: color 0.2s ease;
  }

  .desktop-nav-item::before {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: rgb(216, 80, 240);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: right;
  }

  .desktop-nav-item:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  .bubble {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: rgb(216, 80, 240);
    opacity: 0;
    pointer-events: none;
  }

  .desktop-nav-item:hover .bubble-1 {
    animation: bubble-up 1s ease-out infinite;
  }

  .desktop-nav-item:hover .bubble-2 {
    animation: bubble-up 1s ease-out infinite 0.2s;
  }

  .desktop-nav-item:hover .bubble-3 {
    animation: bubble-up 1s ease-out infinite 0.4s;
  }

  /* Dark mode styles */
  :global(.dark) .desktop-nav-item::before {
    background-color: rgb(236, 64, 255);
  }

  :global(.dark) .bubble {
    background-color: rgb(236, 64, 255);
  }
</style>

<a
  href={href}
  class:list={[
    "hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200",
    isMobile
      ? "block w-full px-3 py-2 rounded-md text-base font-medium text-gray-600 dark:text-gray-200"
      : "text-gray-600 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white desktop-nav-item relative",
  ]}
>
  {text}
  {
    !isMobile && (
      <>
        <div class="bubble bubble-1" style="left: 20%; bottom: 0;" />
        <div class="bubble bubble-2" style="left: 50%; bottom: 0;" />
        <div class="bubble bubble-3" style="left: 80%; bottom: 0;" />
      </>
    )
  }
</a>
