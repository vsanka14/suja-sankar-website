---
import MainLayout from "../layouts/main-layout.astro";
import Card from "../components/card.astro";
import type { AboutSection } from "../types/about";

const content = await import("../content/about.md");
const { aboutSection } = content.frontmatter as {
  aboutSection: AboutSection;
};
const teachingJourneyPoints = aboutSection.teachingJourney;
---

<MainLayout title="About Me">
  <Card title="About Me" emoji="ðŸ‘©â€ðŸ”¬">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="prose max-w-none text-gray-600 dark:text-gray-300">
        <p class="mb-4 mt-1">
          {aboutSection.details}
        </p>
        <div
          class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-400 dark:border-yellow-500 p-4 mb-4"
        >
          <h3
            class="text-md font-semibold text-yellow-800 dark:text-yellow-300"
          >
            Fun Fact
          </h3>
          <p class="text-sm text-yellow-700 dark:text-yellow-400">
            {aboutSection.funFact}
          </p>
        </div>
      </div>

      <div class="bg-gray-50 dark:bg-gray-700/50 p-6 rounded-lg">
        <h2
          class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4"
        >
          Teaching Journey
        </h2>
        <ul class="space-y-4">
          {
            teachingJourneyPoints.map((item) => (
              <li class="flex items-center">
                <span class="text-blue-500 dark:text-blue-400 mr-2">
                  {item.emoji}
                </span>
                <span class="text-gray-600 dark:text-gray-300">
                  {item.text}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Card>
</MainLayout>
