---
import Layout from "@/layouts/layout.astro";
import Card from "@/components/card.astro";
import type { AboutSection } from "@/types/about";

const metadata = {
  title: "About Me",
  description:
    "Meet Prof. Suja Sankar - Texas-certified chemistry teacher with extensive experience in AP and high school chemistry education. Learn about her teaching philosophy and proven track record of helping students succeed in chemistry.",
};

const content = await import("@/content/about.md");
const { aboutSection } = content.frontmatter as {
  aboutSection: AboutSection;
};
const teachingJourneyPoints = aboutSection.teachingJourney;
---

<Layout title={metadata.title} description={metadata.description}>
  <Card title={aboutSection.title} emoji={aboutSection.emoji}>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 px-4 py-4">
      {/* Left column: Details with image */}
      <div class="lg:col-span-2 space-y-6">
        <div
          class="prose max-w-none text-gray-600 dark:text-gray-300 leading-relaxed"
        >
          <img
            src={aboutSection.image}
            alt="Suja Sankar"
            class="float-left mr-6 mb-4 w-64 h-64 object-cover rounded-lg shadow-md border border-gray-100 dark:border-gray-700"
          />
          {
            aboutSection.details
              .split("\n\n")
              .map(
                (paragraph) =>
                  paragraph.trim() && <p class="mb-4">{paragraph}</p>
              )
          }
        </div>

        <div class="clear-both">
          <div
            class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-400 dark:border-yellow-500 p-4"
          >
            <h3
              class="text-md font-semibold text-yellow-800 dark:text-yellow-300"
            >
              Fun Fact
            </h3>
            <p class="text-sm text-yellow-700 dark:text-yellow-400">
              {aboutSection.funFact}
            </p>
          </div>
        </div>
      </div>

      {/* Right column: Teaching Journey */}
      <div
        class="bg-gray-50 dark:bg-gray-700/50 p-6 rounded-lg h-fit lg:sticky lg:top-4"
      >
        <h2
          class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4"
        >
          Teaching Journey
        </h2>
        <ul class="space-y-4">
          {
            teachingJourneyPoints.map((item) => (
              <li class="flex items-center">
                <span class="text-blue-500 dark:text-blue-400 mr-2">
                  {item.emoji}
                </span>
                <span class="text-gray-600 dark:text-gray-300 tracking-tight">
                  {item.text}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Card>
</Layout>

<style>
  @media (max-width: 640px) {
    img {
      float: none;
      margin-right: 0;
      margin-bottom: 1.5rem;
      width: 100%;
      height: auto;
      aspect-ratio: 1 / 1;
    }
  }
</style>
